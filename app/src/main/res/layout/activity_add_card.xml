<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_add_card">

    <EditText
        android:id="@+id/flashcard_question_edittext"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:hint="Enter Question Here" />

    <EditText
        android:id="@+id/flashcard_answer_edittext"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="147dp"
        android:layout_marginBottom="20dp"
        android:hint="Enter Answer Here" />

    <ImageView
        android:id="@+id/flashcard_save_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="337dp"
        android:layout_marginBottom="29dp"
        app:srcCompat="@drawable/ic_iconmonstr_download_2" />

    <ImageView
        android:id="@+id/flashcard_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="29dp"
        app:srcCompat="@drawable/ic_iconmonstr_x_mark_7" />


</RelativeLayout>